<%= render 'layouts/header'%>
<main class="bg-light">
    <nav aria-label="breadcrumb" role="navigation">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><%=link_to "ホーム", root_path %></li>
            <li class="breadcrumb-item"><%=link_to "商品一覧", products_index_path %></li>
        </ol>
    </nav>
    <section class="py-5">
        <h2 class="pickup-head text-center pb-3">商品一覧</h2>
        <div class="container">
            <div class="row">
                <% @products.each do |product|%>
                    <div class="col-sm-6 col-md-3 mb-3">
                        <div class="card">
                            <%= image_tag("#{product.picture}", class: "card-img-top")%>
                            <div class="card-body">
                                <h4 class="card-title"><%= product.name %></h4>
                                <p>¥<%= product.price.to_s(:delimited) %>円</p>
                                <a href="#" class="btn btn-outline-secondary">いいね</a>
                                <a href="#" class="btn btn-outline-secondary">購入画面</a>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </section>
</main>
<%= render 'layouts/footer'%> 