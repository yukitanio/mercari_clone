<div class="bg-light input_product">
  <div class="container">
    <div class="row">
      <div class="col-12 pt-3 text-center">
        <%= link_to root_path, class: "navbar-brand" do %>
          <%= image_tag("logo.png", width: "134", height: "40") %>
        <% end %>
      </div>
    </div>
    <%= render 'message'%>
    <div class="card">
      <div class="card-header text-center">
        プロフィール情報を編集
      </div>
      <div class="card-body">
        <%= form_for(@profile) do |f| %>
          <h5>プロフィール画像</h5>
          <span class="picture">
            <%= f.file_field :picture %>
          </span>
          <hr>
          <h5>名前(必須)</h5>
          <%= f.text_field :name, class: 'form-control' %>
          <hr>
          <h5>コメント</h5>
          <%= f.text_area :content, class: 'form-control', placeholder: "250字まで"%>
          <hr>
          <div class="list-group text-center">
            <%= button_tag(type: 'submit', class: "list-group-item list-group-item-action bg-danger") do %>
              <%= content_tag(:span, '編集', class: "text-white") %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="text-center my-3">
      <%=link_to "戻る", profile_path(current_user), class: "navlink btn btn-outline-primary" %>
    </div>
  </div>
</div>
<%= render 'layouts/footer'  %>