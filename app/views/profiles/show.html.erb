<%= render 'layouts/header'%>
<main class="bg-light">
  <div>
    <nav aria-label="breadcrumb" role="navigation">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%=link_to "ホーム", root_path %></li>
        <li class="breadcrumb-item"><%=link_to "マイページ", @product %></li>
      </ol>
    </nav>
    <div class="container">
      <% if notice.present? %>
        <div class="alert alert-success pl-5"><%= notice %></div>
      <% end%>
      <div class="row mb-3">
        <%= render 'layouts/sidebar'%>
        <div class="col-8 bg-white">
          <div class="row">
            <div class="col-3">
              <div class="profile-img pt-3">
                <%= image_tag("#{@user.profile.picture}") %>
              </div>
            </div>
            <div class="col-9">
              <div class="profile-name">
                <h2 class="pt-5"><%= @user.profile.name %></h2>
              </div>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-12 mb-2">
              <div class="card">
                <div class="card-body">
                  <p><%= @user.profile.content %></p>
                </div>
              </div>
            </div>
          </div>
          <div class="list-group text-center mx-auto w-25">
            <%=link_to "プロフィールを編集", edit_profile_path(@profile), class: "btn btn-outline-info" %>
          </div>
          <div class="list-group text-center mx-auto w-25 mt-3">
            <%=link_to "退会する", user_registration_path, method: :delete, class: "btn btn-outline-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<%= render 'layouts/footer'%> 